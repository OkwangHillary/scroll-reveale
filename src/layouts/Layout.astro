---
import "../styles/index.css"

const { uid, template } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>GSAP Three.js Codrops</title>
  </head>
  <body data-barba="wrapper">
    <div id="app" data-barba="container" data-barba-namespace={uid}>
      <div id="smooth-content" data-page-template={template}>
        <slot />
      </div>
    </div>
    <canvas id="webgl"></canvas>
    <script src="../app/main.ts"></script>
  </body>
</html>
